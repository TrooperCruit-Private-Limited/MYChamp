@page
@model MYChamp.Pages.Employees.ArchivedEmployeesModel


<div class="row align-items-center fixed-top bg-white py-2 shadow-sm" style="z-index: 1030; border-bottom: 1px solid #dee2e6; margin-top:60px;">
    <div class="col-6">
        <h2>Archived Employees</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="./Index" class="btn btn-primary">Back to Active Employees</a>
    </div>
</div>

<div class="container-fluid" style="padding-top: 90px;">
    <table class="table table-bordered table-striped" id="archivedemployeetable">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Remaining Leaves</th>
                <th>Reporting Manager</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Position.Name</td>
                    <td>@employee.RemainingLeaves</td>
                    <td>@employee.ReportingManagerId</td>
                    <td>
                        <form method="post" asp-page-handler="Unarchive" asp-route-id="@employee.Id" style="display:inline;">
                            <button type="submit" class="btn btn-warning">Unarchive</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#archivedemployeetable').DataTable();
        });
    </script>
}