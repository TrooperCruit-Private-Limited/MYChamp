@page
@model MYChamp.Pages.InvoicePage.UnsettledInvoicesModel
@{
    ViewData["Title"] = "Unsettled Invoices";
}

<h2>Unsettled Invoices</h2>
<table class="table">
    <thead>
        <tr>
            <th>Invoice Number</th>
            <th>Customer Name</th>
            <th>Date</th>
            <th>Total Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model.UnsettledInvoices)
        {
            <tr>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.CustomerName</td>
                <td>@invoice.Date.ToLocalTime().ToString("dd MMMM yyyy")</td>
                <td>@invoice.GrandTotal.ToString("C")</td>
                <td>
                    <a asp-page="/InvoicePage/UpdateInvoice" asp-route-id="@invoice.Id" class="btn btn-primary">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
