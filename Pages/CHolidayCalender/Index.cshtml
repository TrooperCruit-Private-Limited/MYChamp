@model MYChamp.Pages.CHolidayCalender.IndexModel
@{
    <br />


    
    <form method="post" asp-page-handler="CreateOrEdit">
        <input type="hidden" asp-for="Holiday.Id" />

        <div class="form-group">
            <label asp-for="Holiday.HolidayName"></label>
            <input asp-for="Holiday.HolidayName" class="form-control" required />
            <span asp-validation-for="Holiday.HolidayName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Holiday.HolidayDate"></label>
            <input asp-for="Holiday.HolidayDate" type="date" class="form-control" required />
            <span asp-validation-for="Holiday.HolidayDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Holiday.BranchName"></label>
            <select asp-for="Holiday.BranchName" class="form-control" required>
                <option value="">-- Select a Branch --</option>
                <option value="Europe">Europe</option>
                <option value="Australia">Australia</option>
                <option value="India">India</option>
            </select>
            <span asp-validation-for="Holiday.BranchName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Holiday.Limit"></label>
            <input asp-for="Holiday.Limit" type="number" class="form-control" max="25" required />
            <span asp-validation-for="Holiday.Limit" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" id="submitButton">
            @(Model.Holiday.Id > 0 ? "Update" : "Create")
        </button>
    </form>
    <form id="deleteForm" method="post" asp-page-handler="Delete">
        <input type="hidden" id="deleteFormId" name="id" value="" />
    </form>


    <hr />

    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this holiday?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>


    <div style="max-height: 200px; overflow-y:auto;">
   
   
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Holiday Name</th>
                <th>Holiday Date</th>
                <th>Branch Name</th>
                <th>Limit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var holiday in Model.Holidays)
            {
                <tr id="holiday-@holiday.Id">
                    <td>@holiday.HolidayName</td>
                    <td>@holiday.HolidayDate.Date.ToShortDateString()</td>

                    <td>@holiday.BranchName</td>
                    <td>@holiday.Limit</td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="editHoliday(@holiday.Id)">Edit</button>


                            <button class="btn btn-danger btn-sm" onclick="showDeleteModal(@holiday.Id)">Delete</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <script>
                function editHoliday(id) {
            const row = document.querySelector(`#holiday-${id}`);
            const name = row.children[0].innerText;
            const date = row.children[1].innerText;
            const branch = row.children[2].innerText;
            const limit = row.children[3].innerText;


                 
        let holidayDate = new Date(date + "T00:00:00");
        if (isNaN(holidayDate.getTime())) {
            holidayDate = new Date();
        }


          
            document.querySelector('input[name="Holiday.Id"]').value = id;
            document.querySelector('input[name="Holiday.HolidayName"]').value = name;
        document.querySelector('input[name="Holiday.HolidayDate"]').value = holidayDate.toISOString().slice(0, 10);


            document.querySelector('select[name="Holiday.BranchName"]').value = branch;
            document.querySelector('input[name="Holiday.Limit"]').value = limit;

             
        document.querySelector('#submitButton').textContent = "Update";
        }

            
        document.querySelector('form').addEventListener('submit', function () {
            
            setTimeout(() => {
                if (!document.querySelector('input[name="Holiday.Id"]').value) {
                    document.querySelector('#submitButton').textContent = "Create";
                }
            }, 50); 
        });


               let holidayToDelete = null;

        
        function showDeleteModal(id) {
            holidayToDelete = id; 
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

       
        document.getElementById('confirmDeleteButton').addEventListener('click', function () {
            if (holidayToDelete) {
                
                document.getElementById('deleteFormId').value = holidayToDelete;

               
                document.getElementById('deleteForm').submit();
            }
        });
    </script>
}


