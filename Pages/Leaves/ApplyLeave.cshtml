@page
@model MYChamp.Pages.ApplyLeaveModel
@{
    ViewData["Title"] = "Apply for Leave";
}

<div class="container my-5">
    <h2 class="mb-4">Apply for Leave</h2>

    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="LeaveApplication.EmployeeId" class="form-control" id="employeeId" placeholder="Employee ID" readonly />
                    <label for="employeeId">Employee ID</label>
                    <span asp-validation-for="LeaveApplication.EmployeeId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="LeaveApplication.Employee.Name" class="form-control" id="name" placeholder="Employee Name" readonly />
                    <label for="name">Employee Name</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="LeaveApplication.FromDate" class="form-control" id="fromDate" type="date" placeholder="From Date" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                    <label for="fromDate">From Date</label>
                    <span asp-validation-for="LeaveApplication.FromDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="LeaveApplication.ToDate" class="form-control" id="toDate" type="date" placeholder="To Date" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                    <label for="toDate">To Date</label>
                    <span asp-validation-for="LeaveApplication.ToDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="form-floating">
                    <textarea asp-for="LeaveApplication.Reason" class="form-control" id="reason" placeholder="Reason" style="height: 100px;"></textarea>
                    <label for="reason">Reason</label>
                    <span asp-validation-for="LeaveApplication.Reason" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="form-floating">
                    <input asp-for="LeaveApplication.ManagerId" class="form-control" id="managerId" readonly />
                    <label for="managerId">Manager</label>
                    <span asp-validation-for="LeaveApplication.ManagerId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label>Leave Type:</label>
                <div class="form-check">
                    <input asp-for="LeaveApplication.IsHalfDay" class="form-check-input" type="radio" id="fullDay" value="false" checked />
                    <label class="form-check-label" for="fullDay">Full Day</label>
                </div>
                <div class="form-check">
                    <input asp-for="LeaveApplication.IsHalfDay" class="form-check-input" type="radio" id="halfDay" value="true" />
                    <label class="form-check-label" for="halfDay">Half Day</label>
                </div>
            </div>
        </div>

        <div class="row mb-3" id="halfDaySession" style="display: none;">
            <div class="col-md-12">
                <label>Session:</label>
                <div class="form-check">
                    <input asp-for="LeaveApplication.Session" class="form-check-input" type="radio" id="morning" value="Morning" />
                    <label class="form-check-label" for="morning">Morning</label>
                </div>
                <div class="form-check">
                    <input asp-for="LeaveApplication.Session" class="form-check-input" type="radio" id="afternoon" value="Afternoon" />
                    <label class="form-check-label" for="afternoon">Afternoon</label>
                </div>
                <span asp-validation-for="LeaveApplication.Session" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-page="Pages/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const halfDayRadio = document.getElementById("halfDay");
            const fullDayRadio = document.getElementById("fullDay");
            const halfDaySessionDiv = document.getElementById("halfDaySession");

            const toggleHalfDaySession = () => {
                if (halfDayRadio.checked) {
                    halfDaySessionDiv.style.display = "block";
                } else {
                    halfDaySessionDiv.style.display = "none";
                }
            };

            halfDayRadio.addEventListener("change", toggleHalfDaySession);
            fullDayRadio.addEventListener("change", toggleHalfDaySession);

            // Initial setup
            toggleHalfDaySession();
        });
    </script>
}
