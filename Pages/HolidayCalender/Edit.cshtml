@page

@model MYChamp.Pages.HolidayCalender.EditModel

<br />
@{
        <h2>Edit Holiday</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="Holiday.HolidayDate">Holiday Date</label>
            <input asp-for="Holiday.HolidayDate" class="form-control" readonly />
            <span asp-validation-for="Holiday.HolidayDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Holiday.HolidayName">Holiday Name</label>
            <input asp-for="Holiday.HolidayName" class="form-control" />
            <span asp-validation-for="Holiday.HolidayName" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Holiday.Id" />
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Back</a>
    </form>

}
