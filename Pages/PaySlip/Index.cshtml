@page
@model MYChamp.Pages.PaySlip.IndexModel
@{
    ViewData["Title"] = "PaySlip";
}

<h2 class="mt-5">Employee PaySlip Details</h2>

<table class="table table-striped table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Monthly Salary</th>
            <th>EPF</th>
            <th>Profession Tax</th>
            <th>Income Tax</th>
            <th>Leave Deductions</th>
            <th>Net Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PaySlipDetails)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.Name</td>
                <td>@item.MonthlySalary</td>
                <td>@item.EPF</td>
                <td>@item.ProfessionTax</td>
                <td>@item.IncomeTax</td>
                <td>@item.LeaveDeductions</td>
                <td>@item.NetSalary</td>
                <td>
                    @if (item.CanDispatch)
                    {
                        <form method="post" asp-page-handler="Dispatch">
                            <input type="hidden" name="employeeId" value="@item.EmployeeId" />
                            <input type="hidden" name="netSalary" value="@item.NetSalary" />
                            <button type="button" class="btn btn-danger">Edit</button>
                            <button type="submit" class="btn btn-primary">Dispatch</button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger" disabled>Edit</button>
                        <button type="submit" class="btn btn-primary" disabled>Dispatched</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
